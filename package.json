{
  "name": "@settlemint/dtx-crowdsale-contracts",
  "version": "0.0.0-development",
  "description": "The smart contracts for the DTX crowdsale",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=8.7.0"
  },
  "scripts": {
    "coverage": "solidity-coverage",
    "test": "mint test",
    "lint": "npm run solium -- --dir contracts --fix",
    "watch": "nodemon --watch . --exec npm run test",
    "semantic-release": "semantic-release",
    "solium": "solium"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/databrokerdao/dtx-crowdsale-contracts.git"
  },
  "keywords": [
    "mint",
    "boilerplate"
  ],
  "author": "Roderik van der Veer <roderik@settlemint.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/databrokerdao/dtx-crowdsale-contracts/issues"
  },
  "homepage": "https://github.com/databrokerdao/dtx-crowdsale-contracts#readme",
  "devDependencies": {
    "bluebird": "^3.5.2",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "ethereumjs-testrpc-sc": "^6.1.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "moment": "^2.22.2",
    "nodemon": "^1.18.4",
    "p-iteration": "^1.1.7",
    "prettier": "^1.14.3",
    "semantic-release": "^15.9.15",
    "solc": "^0.4.25",
    "solidity-coverage": "^0.5.11",
    "solium": "^1.1.8",
    "truffle-hdwallet-provider": "^1.0.0-web3one.0"
  },
  "dependencies": {
    "ethereumjs-abi": "^0.6.5",
    "openzeppelin-solidity": "^1.12.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier",
      "node",
      "promise"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-console": 0,
      "node/exports-style": [
        "error",
        "module.exports"
      ]
    },
    "globals": {
      "artifacts": true,
      "web3": true,
      "assert": true,
      "contract": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "jest": true
    }
  }
}
